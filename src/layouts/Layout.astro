---
import Navbar from '../components/Navbar.astro';
import Header from "../components/Header.astro"
import PostHog from '../components/posthog.astro';

import "../styles/global.css"
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Akinkunmi" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><rect width='100' height='100' rx='20' fill='hsl(0,70%,50%)'/></svg>" />
		<script is:inline>
			(function() {
				const hue = Math.floor(Math.random() * 360);
				const svg = `<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><rect width='100' height='100' rx='20' fill='hsl(${hue},70%,50%)'/></svg>`;
				const link = document.querySelector("link[rel='icon']");
				if (link) link.href = "data:image/svg+xml," + encodeURIComponent(svg);
			})();
		</script>
		<meta name="generator" content="Akinkunmi" />
		<title>{title}</title>
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://akinkunmi.dev" />	
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Akinkunmi" />
		<meta property="og:image" content="/og.png" />
		
		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://akinkunmi.dev" />
		<meta property="twitter:title" content={title} />
		<meta property="twitter:description" content="Akinkunmi" />
		<meta property="twitter:image" content="/og.png" />

		<PostHog/>
	  
	</head>
	<body class="bg-black-001 text-off-white pb-10 min-h-screen">
		<div class="max-w-xl mx-auto px-6 py-16">
			<!-- <Navbar /> -->
			<slot/>
		</div>
	</body>
</html>